<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gainsboro"
        app:srcCompat="@mipmap/fs_welcome" />

    <LinearLayout
        android:id="@+id/home_reserve"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/gainsboro"
            app:srcCompat="@mipmap/reserve_arrows" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="112dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"

                android:text="入口站：" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/end"
                android:layout_alignBottom="@+id/end"
                android:layout_toStartOf="@+id/start"
                android:text="出口站：" />

            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"

                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/textView3"
                android:background="@color/whitesmoke"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/end"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/start"
                android:background="@color/whitesmoke"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:inputType="date"
        android:text="日期"
        android:background="@color/whitesmoke"
        />

    <Button
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/royalblue"
        android:text="预约"
        android:textColor="@color/antiquewhite" />
    <Button
        android:id="@+id/startmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/royalblue"
        android:text="预约"
        android:textColor="@color/antiquewhite" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView4"
        android:baselineAligned="false"
        android:gravity="center"
        android:text="111"
        android:textSize="20sp" />


</LinearLayout>
